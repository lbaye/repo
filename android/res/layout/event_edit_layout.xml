<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_light"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layoutHeader"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/header"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnBack"
            android:layout_width="45dp"
            android:layout_height="23dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_back"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="135dip"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/logo_banner" />

        <Button
            android:id="@+id/btnNotification"
            android:layout_width="30dp"
            android:layout_height="31dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_icon_notification"
            android:text="0"
            android:textSize="10dip"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:paddingBottom="12dip"
            android:paddingRight="2dip"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="@drawable/img_settings_header_bg"
        android:gravity="center_vertical|left"
        android:orientation="horizontal"
        android:paddingLeft="10dip" >

        <ImageView
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/icon_event_small" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="@string/eventEditLabel"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollViewBody"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:id="@+id/linearLayoutBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" > 
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="5dip"
                android:paddingLeft="10dip"
                android:paddingTop="10dip" >

                <Button
                    android:id="@+id/btnPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:paddingBottom="5dip"
                    android:paddingRight="10dip"
                    android:paddingTop="5dip"
                    android:text="Event photo..."
                    android:textColor="@color/black"
                    android:textSize="12dip"
                    android:textStyle="normal" 
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left" 
                    android:paddingRight="10dip">

                    <ImageView
                        android:id="@+id/ivEventImage"
                        android:layout_width="fill_parent"
                        android:layout_height="150dip"
                        android:background="@color/offwhite"
                        android:scaleType="fitCenter" 
                        android:src="@null" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dip" >

                <Button
                    android:id="@+id/btnAddOrUploadPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="left|center_vertical" 
                    android:text="Edit Photo"
                    android:paddingLeft="95dip" 
                    android:paddingRight="7dip"
                    android:textColor="@color/black"
                    android:textSize="12dip"
                    android:textStyle="normal" />

                <ImageView
                    android:layout_width="2dip"
                    android:layout_height="30dip"
                    android:scaleType="centerInside"
                    android:src="@drawable/seperator" />

                <Button
                    android:id="@+id/btnCanclePhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:paddingLeft="10dip"
                    android:paddingRight="50dip"
                    android:text="@string/deletePhotoLabel"
                    android:textColor="@color/black"
                    android:textSize="12dip"
                    android:textStyle="normal" />
            </LinearLayout>

            <!-- RadioGroup for location starts -->

            <LinearLayout
                android:id="@+id/locationRadioGroupContainer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
            </LinearLayout>
            <!-- RadioGroup for location ends --> 
            
            <TextView 
                	android:id="@+id/tvTitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:gravity="left"
                    android:maxHeight="30dip"
                    android:text="Venue: "
                    android:textColor="@color/black"
                    android:textSize="12dip"
                    android:textStyle="bold" 
                    android:layout_marginTop="5dip" 
                    android:visibility="gone"
                    /> 
                    
            <TextView
                	android:id="@+id/tvTitleDescription"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:gravity="left"
                    android:maxHeight="30dip"
                    android:text="Description"
                    android:textColor="@color/black"
                    android:textSize="12dip"
                    android:textStyle="normal" 
                    android:layout_marginTop="5dip" 
                    android:visibility="gone"
                    />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginTop="10dip"
                android:background="@color/gray_light" />

            <LinearLayout
                android:id="@+id/infoButtonPanel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btnName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:paddingTop="5dip"
                        android:paddingBottom="5dip"
                        android:text="Event name..."
                        android:textColor="@color/black"
                        android:textSize="12dip"
                        android:textStyle="normal"
                        android:gravity="left|center_vertical" />

                    <ImageView
                        android:layout_width="2dip"
                        android:layout_height="30dip"
                        android:scaleType="centerInside"
                        android:src="@drawable/seperator" />

                    <Button
                        android:id="@+id/btnSummary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:padding="5dip"
                        android:text="Summary..."
                        android:textColor="@color/black"
                        android:textSize="12dip"
                        android:textStyle="normal" />

                    <ImageView
                        android:layout_width="2dip"
                        android:layout_height="30dip"
                        android:scaleType="centerInside"
                        android:src="@drawable/seperator" />

                    <Button
                        android:id="@+id/btnDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:padding="5dip"
                        android:text="Description..."
                        android:textColor="@color/black"
                        android:textSize="12dip"
                        android:textStyle="normal" />

                    <ImageView
                        android:layout_width="2dip"
                        android:layout_height="30dip"
                        android:scaleType="centerInside"
                        android:src="@drawable/seperator" />

                    <Button
                        android:id="@+id/btnDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:padding="5dip"
                        android:text="Date..."
                        android:textColor="@color/black"
                        android:textSize="12dip"
                        android:textStyle="normal"
                        android:gravity="right|center_vertical" />
                </LinearLayout>

                <!-- <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="5dip" 
                    android:paddingBottom="5dip">

                    <Button
                        android:id="@+id/btnPhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"                        
                        android:background="@null"
                        android:paddingTop="5dip"
                        android:paddingBottom="5dip"
                        android:paddingRight="10dip"
                        android:text="Edit photo..."
                        android:textColor="@color/black"
                        android:textSize="12dip"
                        android:textStyle="normal"
                        android:gravity="left|center_vertical" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left" >

                        <ImageView
                            android:id="@+id/ivEventImage"
                            android:layout_width="100dip"
                            android:layout_height="30dip"
                            android:scaleType="fitXY"
                            android:src="@null" />
                    </LinearLayout>
                </LinearLayout> -->
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginTop="10dip"
                android:background="@color/gray_light" />

            <com.socmaps.widget.ExpandablePanel
                xmlns:my="http://schemas.android.com/apk/res/com.socmaps.ui"
                android:id="@+id/shareWithPanel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                my:collapsedHeight="50dip"
                my:expcontent="@+id/shareWithContent"
                my:exphandle="@+id/shareWithExpand" >

                <LinearLayout
                    android:id="@+id/shareWithContent"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/shareWithExpand"
                        android:layout_width="fill_parent"
                        android:layout_height="50dip"
                        android:background="@drawable/img_settings_list_bg"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/linearLayout1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dip"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/bottomtextShareWith"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="#5E5E5E"
                                android:textSize="12dip" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/toggleIconShareWith"
                            android:layout_width="27dip"
                            android:layout_height="22dip"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dip"
                            android:adjustViewBounds="true"
                            android:padding="5dip"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_arrow_down" />

                        <TextView
                            android:id="@+id/toptextShareWith"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text="Share with"
                            android:textColor="#000000"
                            android:textSize="14dip"
                            android:textStyle="normal" />
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="7dip"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/line_arrow_down_left" />

                    <!-- RadioGroup for people permission starts -->

                    <LinearLayout
                        android:id="@+id/shareWithRadioGroupContainer"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >
                    </LinearLayout>

                    <!-- RadioGroup for people permission ends -->

                </LinearLayout>
            </com.socmaps.widget.ExpandablePanel>

            <com.socmaps.widget.ExpandablePanel
                xmlns:my="http://schemas.android.com/apk/res/com.socmaps.ui"
                android:id="@+id/invitePeoplePanel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                my:collapsedHeight="50dip"
                my:expcontent="@+id/invitePeopleContent"
                my:exphandle="@+id/invitePeopleExpand" >

                <LinearLayout
                    android:id="@+id/invitePeopleContent"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/invitePeopleExpand"
                        android:layout_width="fill_parent"
                        android:layout_height="50dip"
                        android:background="@drawable/img_settings_list_bg"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/linearLayout1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dip"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/bottomtextInvitePeople"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="#5E5E5E"
                                android:textSize="12dip" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/toggleIconInvitePeople"
                            android:layout_width="27dip"
                            android:layout_height="22dip"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dip"
                            android:adjustViewBounds="true"
                            android:padding="5dip"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_arrow_down" />

                        <TextView
                            android:id="@+id/toptextInvitePeople"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text="Invite people"
                            android:textColor="#000000"
                            android:textSize="14dip"
                            android:textStyle="normal" />
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="7dip"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/line_arrow_down_left" />

                    <RelativeLayout
                        android:id="@+id/peopleListContainer"
                        android:layout_width="fill_parent"
                        android:layout_height="180dip"
                        android:layout_above="@+id/buttonPanel"
                        android:layout_alignParentTop="true" >

                        <RelativeLayout
                            android:id="@+id/peopleTabContainer"
                            android:layout_width="wrap_content"
                            android:layout_height="50dip"
                            android:layout_alignParentTop="true" >

                            <Button
                                android:id="@+id/btnFriendSelect"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:background="@color/transparent"
                                android:paddingTop="5dip"
                                android:paddingBottom="5dip"
                                android:paddingRight="5dip"
                                android:layout_marginLeft="10dip"
                                android:gravity="left|center_vertical"
                                android:text="@string/pickerSelectOrSearchLabel"
                                android:textColor="@color/black"
                                android:textSize="12dip"
                                android:textStyle="normal" />

                            <EditText
                                android:id="@+id/etFriendSearch"
                                android:layout_width="100dip"
                                android:layout_height="40dip"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/btnFriendSelect"
                                android:hint="by name"
                                android:textSize="12dip" />

                            <Button
                                android:id="@+id/btnCircleSelect"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@color/transparent"
                                android:paddingTop="5dip"
                                android:paddingBottom="5dip"
                                android:paddingRight="10dip"
                                android:layout_marginLeft="5dip"
                                android:text="Circles..."
                                android:textColor="@color/black"
                                android:textSize="12dip" 
                                android:gravity="right|center_vertical"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_toLeftOf="@+id/btnCircleSelect"
                                android:layout_toRightOf="@+id/etFriendSearch"
                                android:gravity="center" >

                                <ImageView
                                    android:layout_width="1dip"
                                    android:layout_height="30dip"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/seperator" />
                            </LinearLayout>

                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="1dip"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="3dip"
                                android:background="@color/gray" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/container"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_above="@+id/selectorButtonPanel"
                            android:layout_below="@+id/peopleTabContainer"
                            android:background="@color/white" >

                            <ScrollView
                                android:id="@+id/scrollViewFriends"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:scrollbars="none"
                                android:visibility="visible" >

                                <HorizontalScrollView
                                    android:id="@+id/HorizontalScrollViewFriend"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:scrollbars="none" >

                                    <LinearLayout
                                        android:id="@+id/friendListContainer"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal" >

                                        <!--
                         <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Friend List" />
                                        -->
                                    </LinearLayout>
                                </HorizontalScrollView>
                            </ScrollView>

                            <ScrollView
                                android:id="@+id/scrollViewCircles"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:scrollbars="none"
                                android:visibility="gone" >

                                <LinearLayout
                                    android:id="@+id/circleListContainer"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical" >

                                    <!--
			                         <TextView
			                        android:layout_width="wrap_content"
			                        android:layout_height="wrap_content"
			                        android:text="Circle List" />
                                    -->
                                </LinearLayout>
                            </ScrollView>
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/selectorButtonPanel"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="@color/white"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <Button
                                android:id="@+id/btnUnselectAll"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dip"
                                android:background="@color/transparent"
                                android:padding="10dip"
                                android:text="@string/unselectAllLabel"
                                android:textColor="@color/black"
                                android:textSize="12dip" />

                            <Button
                                android:id="@+id/btnSelectAll"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dip"
                                android:background="@color/transparent"
                                android:padding="10dip"
                                android:text="@string/addAllLabel"
                                android:textColor="@color/black"
                                android:textSize="12dip" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </com.socmaps.widget.ExpandablePanel>

            <RelativeLayout
                android:id="@+id/linearLayoutFoot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00F7F7F7" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_light" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dip" >

                    <Button
                        android:id="@+id/btnCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:padding="5dip"
                        android:text="@string/cancel"
                        android:textColor="@color/black"
                        android:textSize="12dip"
                        android:textStyle="normal"
                        android:gravity="left|center_vertical" />

                    <ImageView
                        android:layout_width="2dip"
                        android:layout_height="30dip"
                        android:scaleType="centerInside"
                        android:src="@drawable/seperator" />

                    <CheckBox
                        android:id="@+id/chkGuestPermission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:checked="false"
                        android:text="Guests can invite friends"
                        android:textColor="@color/gray_dark"
                        android:textSize="12dp" />

                    <ImageView
                        android:layout_width="2dip"
                        android:layout_height="30dip"
                        android:scaleType="centerInside"
                        android:src="@drawable/seperator" />

                    <Button
                        android:id="@+id/btnSave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:padding="5dip"
                        android:text="@string/updateButtonLabel"
                        android:textColor="@color/black"
                        android:textSize="12dip"
                        android:textStyle="normal"
                        android:gravity="right|center_vertical" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>