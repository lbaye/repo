<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:padding="0dp" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="20dip"
        android:layout_marginTop="20dip" >

        <TextView
            android:id="@+id/sender_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="John Doe"
            android:textColor="#4C4C4C"
            android:textSize="14dip"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/sender_name_text_view"
            android:text="@string/friendRequestNameLabel"
            android:textColor="#6C6C6C"
            android:textSize="12dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="01:37"
            android:textColor="#6C6C6C"
            android:textSize="14dip"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/common_friends_number_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="7"
            android:textColor="#6C6C6C"
            android:textSize="12dip"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/common_friends_number_text_view"
            android:text="@string/commonFriendNumberLabel"
            android:textColor="#6C6C6C"
            android:textSize="12dip"
            android:textStyle="italic" />
    </RelativeLayout>
    
     <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip" >

       <Button android:id="@+id/accept_friend_request_btn"
           android:layout_height="32dip"
           android:layout_width="72dip" 
           android:background="@drawable/btn_bg_selector_accept"
           android:layout_alignParentLeft="true"/>
       
       
       <Button android:id="@+id/decline_friend_request_btn"
           android:layout_height="32dip"
           android:layout_width="72dip"
           android:layout_marginLeft="10dip" 
           android:background="@drawable/decline_btn_bg_selector"
           android:layout_toRightOf="@+id/accept_friend_request_btn"/>
       
       
       <Button android:id="@+id/ignore_friend_request_btn"
           android:layout_height="32dip"
           android:layout_width="72dip"
           android:layout_marginLeft="10dip" 
           android:background="@drawable/ignore_btn_bg_selector"
           android:layout_toRightOf="@+id/decline_friend_request_btn"/>
         
    </RelativeLayout>
    
<View android:layout_width="fill_parent"
    android:layout_height="1dip"
    android:background="#BFBFBF"
    android:layout_marginTop="20dip"/>
</LinearLayout>