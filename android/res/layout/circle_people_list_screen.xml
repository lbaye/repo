<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#FBFBFB">
    <RelativeLayout
        android:id="@+id/layoutHeader"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/header"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnBack"
            android:layout_width="45dp"
            android:layout_height="23dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_back"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="135dip"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/logo_banner" />

        <Button
            android:id="@+id/btnNotification"
            android:layout_width="30dp"
            android:layout_height="31dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_icon_notification"
            android:text="0"
            android:textSize="10dip"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:paddingBottom="12dip"
            android:paddingRight="2dip" />
    </RelativeLayout>
    
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/showPeopleFromLabel"
        android:textSize="16dip"
        android:textColor="@color/gray_dark"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="5dip"/>
    
    <LinearLayout android:id="@+id/checkBoxPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dip">
        
        <CheckBox android:id="@+id/fbCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fb"
            android:textColor="@color/gray_dark"/>
        
        <CheckBox android:id="@+id/smCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/socialMapsLabel"
            android:textColor="@color/gray_dark"
            android:layout_marginLeft="10dip"/>
    </LinearLayout>
    
    <View android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/seperator"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"/>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        
        >
        
        <Button
                    android:id="@+id/inviteBtn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/transparent"
                   	android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:paddingTop="5dip"
                    android:paddingBottom="5dip"
                    android:text="@string/inviteLabel"
                    android:textColor="@color/black"
                    android:textSize="11dip"
                    android:layout_weight="1" />
        
        <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                   
                    
                    android:scaleType="centerInside"
                    android:src="@drawable/seperator" />
        
        <Button
                    android:id="@+id/circlesBtn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/transparent"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:paddingTop="5dip"
                    android:paddingBottom="5dip"
                    android:text="@string/circlesLabel"
                    android:textColor="@color/black"
                    android:textSize="11dip"
                    android:layout_weight="1" />
        
        <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                   
                    
                    android:scaleType="centerInside"
                    android:src="@drawable/seperator" />
        <Button
                    android:id="@+id/blockUnblockBtn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/transparent"
                   android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:paddingTop="5dip"
                    android:paddingBottom="5dip"
                    android:text="@string/blockUnblockLabel"
                    android:textColor="@color/black"
                    android:textSize="11dip" 
                    android:layout_weight="1"/>
        
       
       
        
    </LinearLayout>
     <ListView
        android:id="@+id/people_list_circle"
        android:layout_below="@+id/filterPanel"
  		android:layout_width="fill_parent"
  		android:layout_height="fill_parent"
  		android:background="@color/offwhite"
        android:cacheColorHint="@android:color/white"
 		/>

</LinearLayout>