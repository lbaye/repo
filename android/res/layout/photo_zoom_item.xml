<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayPhotoZoom"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

    <ImageView
        android:id="@+id/ivPhotoZoom"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_alert"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnPhotoZoomLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dip"
        android:background="@drawable/arrow_solid_left_pressed" />

    <Button
        android:id="@+id/btnPhotoZoomRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dip"
        android:background="@drawable/arrow_solid_right_pressed" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="35dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="top" >

        <Button
            android:id="@+id/btnPhotoZoomClose"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:background="@drawable/balloon_overlay_close" />
    </LinearLayout>

</RelativeLayout>