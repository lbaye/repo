<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dip"
    android:layout_height="wrap_content"
    android:background="#F7F7F7"
    android:orientation="vertical"
    android:paddingBottom="10dip" >

    <ImageView
        android:id="@+id/close_btn"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:layout_gravity="right|top"
        android:layout_marginRight="5dip"
        android:layout_marginTop="5dip"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/balloon_overlay_close" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:paddingTop="0dip" >

            <ImageView
                android:id="@+id/avater_image"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:adjustViewBounds="true"
                android:background="@drawable/rounded_border_image_bg"
                android:scaleType="fitCenter"
                android:src="@null" />

            <Button
                android:id="@+id/add_frnd_btn"
                android:layout_width="70dip"
                android:layout_height="35dip"
                android:layout_marginTop="20dip"
                android:text="Add Friend"
                android:textSize="10dip"
                android:textStyle="normal"
                android:background="@drawable/selector_btn_light"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvFriendshipStatus"
                android:layout_width="70dip"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="20dip"
                android:text=""
                android:textColor="@color/gray_dark"
                android:textSize="10dip"
                android:textStyle="bold"
                android:visibility="visible" />
            
            <Button
                android:id="@+id/profile_btn"
                android:layout_width="70dip"
                android:layout_height="35dip"
                android:layout_marginTop="20dip"
                android:text="Profile"
                android:textSize="10dip"
                android:textStyle="normal"
                android:background="@drawable/selector_btn_light"
                android:visibility="visible" />
            
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:layout_marginTop="0dip"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/first_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Unknown"
                    android:textColor="#000000"
                    android:textSize="14dip"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/age_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_toRightOf="@+id/first_name_text"
                    android:text="-Age:"
                    android:textColor="#000000"
                    android:textSize="12dip" />
            </RelativeLayout>

            
            <TextView
                android:id="@+id/status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textColor="#000000"
                android:textSize="12dip"
                android:textStyle="normal" />
            
            <TextView
                android:id="@+id/distance_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance unknown"
                android:textColor="#000000"
                android:textSize="14dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/street_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location unknown"
                android:textColor="#000000"
                android:textSize="14dip"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/genderInfoContainer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/gender_text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/genderLabel"
                    android:textColor="#000000"
                    android:textSize="12dip" />

                <TextView
                    android:id="@+id/gender_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":Unknown"
                    android:textColor="#000000"
                    android:textSize="12dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/relationshipInfoContainer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/relationship_status_text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/relationshipstatus"
                    android:textColor="#000000"
                    android:textSize="12dip" />

                <TextView
                    android:id="@+id/relationship_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unknown"
                    android:textColor="#000000"
                    android:textSize="12dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cityInfoContainer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/city_text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/living_in"
                    android:textColor="#000000"
                    android:textSize="12dip" />

                <TextView
                    android:id="@+id/city_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unknown"
                    android:textColor="#000000"
                    android:textSize="12dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/workInfoContainer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/work_text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/work_at"
                    android:textColor="#000000"
                    android:textSize="12dip" />

                <TextView
                    android:id="@+id/work_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unknown"
                    android:textColor="#000000"
                    android:textSize="12dip" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:visibility="visible" >

        <Button
            android:id="@+id/meet_up_btn"
            android:layout_width="70dip"
            android:layout_height="35dip"
            android:layout_alignParentLeft="true"
            android:background="@drawable/selector_btn_light"
            android:text="@string/meet_up_label"
            android:textSize="12dip"
            android:visibility="gone" />

        <Button
            android:id="@+id/directions_btn"
            android:layout_width="70dip"
            android:layout_height="35dip"
            android:layout_centerInParent="true"
            android:background="@drawable/selector_btn_light"
            android:text="@string/directionLabel"
            android:textSize="12dip" />

        <Button
            android:id="@+id/message_btn"
            android:layout_width="70dip"
            android:layout_height="35dip"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_btn_light"
            android:text="@string/messageLabel"
            android:textSize="12dip" />
    </RelativeLayout>

</LinearLayout>