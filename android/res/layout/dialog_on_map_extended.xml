<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dip"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="#F7F7F7">
    
    <ImageView android:id="@+id/close_btn"
        android:layout_width="20dip"
        android:layout_height="20dip" 
        android:src="@drawable/balloon_overlay_close"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_gravity="right|top"
        android:layout_marginRight="5dip"
        android:layout_marginTop="5dip"/>
    
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="150dip"
        android:orientation="horizontal">
        
        <LinearLayout android:orientation="vertical"
           
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingTop="0dip"
            android:paddingLeft="10dip">
            
            <ImageView android:id="@+id/avater_image"
                android:layout_width="50dp"
                android:layout_height="50dip"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal|top"
                android:src="@drawable/icon"/>
            
            <Button android:id="@+id/add_frnd_btn"
                android:layout_width="70dip"
                android:layout_height="wrap_content"
                android:text="Add Friend"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dip"
                 android:textSize="12dip"
            	android:textStyle="bold"/>
        </LinearLayout>
        
        <LinearLayout android:layout_width="fill_parent"
            
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="left|top"
            android:layout_marginTop="0dip">
            
            <LinearLayout android:layout_width="fill_parent" 
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView android:id="@+id/first_name_text"
                android:text="Unknown"
                android:textSize="14dip"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView android:id="@+id/age_text"
                android:text="-Age:"
                android:textSize="12dip"
                android:textColor="#000000"
                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            </LinearLayout>
            
            <TextView android:id="@+id/distance_text"
                android:text="Unknown"
                android:textSize="14dip"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView android:id="@+id/street_text"
                android:text="Unknown"
                android:textSize="14dip"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            
             <LinearLayout android:layout_width="fill_parent" 
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView android:id="@+id/gender_text_title"
                android:text="@string/genderLabel"
                android:textSize="12dip"
                android:textColor="#000000"
              
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView android:id="@+id/gender_text"
                android:text=":Unknown"
                android:textSize="12dip"
                android:textColor="#000000"
                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="fill_parent" 
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView android:id="@+id/relationship_status_text_title"
                android:text="@string/relationshipstatus"
                android:textSize="12dip"
                android:textColor="#000000"
              
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView android:id="@+id/relationship_text"
                android:text="Unknown"
                android:textSize="12dip"
                android:textColor="#000000"
                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            </LinearLayout>
             <LinearLayout android:layout_width="fill_parent" 
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView android:id="@+id/city_text_title"
                android:text="@string/living_in"
                android:textSize="12dip"
                android:textColor="#000000"
              
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView android:id="@+id/city_text"
                android:text="Unknown"
                android:textSize="12dip"
                android:textColor="#000000"
                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            </LinearLayout>
            
             <LinearLayout android:layout_width="fill_parent" 
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView android:id="@+id/work_text_title"
                android:text="@string/work_at"
                android:textSize="12dip"
                android:textColor="#000000"
              
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView android:id="@+id/work_text"
                android:text="Unknown"
                android:textSize="12dip"
                android:textColor="#000000"
                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            </LinearLayout>
            
        </LinearLayout>
        
    </LinearLayout>
    
    <RelativeLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:paddingBottom="10dip">
        
        <Button android:id="@+id/meet_up_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meet-Up"
            android:layout_alignParentLeft="true"
            android:textSize="10dip"
            android:textStyle="bold"></Button>
        <Button android:id="@+id/directions_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Directions"
            android:layout_centerInParent="true"
            android:textSize="10dip"
            android:textStyle="bold"></Button>
        <Button android:id="@+id/message_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message"
            android:layout_alignParentRight="true"
            android:textSize="10dip"
            android:textStyle="bold"></Button>
        </RelativeLayout>

</LinearLayout>