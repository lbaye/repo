<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#EEEEEE"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true" >

    <include
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutHeader"
        layout="@layout/top_panel" />

    <ListView
        android:id="@+id/people_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topPanel"
        android:background="@color/offwhite"
        android:cacheColorHint="@android:color/white" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@color/offwhite"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <Button
            android:id="@+id/btnCancelInvite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/offwhite"
            android:padding="5dip"
            android:text="@string/cancelLabel"
            android:textColor="@color/black"
            android:textSize="11dip" />

        <ImageView
            android:layout_width="0dip"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/seperator" />

        <Button
            android:id="@+id/btnSeleceUnselectAllUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/offwhite"
            android:padding="5dip"
            android:text="@string/selectAllLabel"
            android:textColor="@color/black"
            android:textSize="11dip" />

        <ImageView
            android:layout_width="0dip"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/seperator" />

        <Button
            android:id="@+id/btnInviteSelectedUsers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/offwhite"
            android:padding="5dip"
            android:text="@string/inviteSelectedUserslabel"
            android:textColor="@color/black"
            android:textSize="11dip" />
    </LinearLayout>

</RelativeLayout>