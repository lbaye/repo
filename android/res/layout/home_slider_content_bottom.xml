<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="36dp"
    android:background="@drawable/footer_slider_bg"
    android:gravity="center"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center" >
        <Button
            android:id="@+id/btnMapView"
            android:layout_width="27dp"
            android:layout_height="22dp"
            android:background="@drawable/selector_icon_map_view" />
    </LinearLayout>
    
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:scaleType="centerInside"
        android:src="@drawable/seperator"
        />
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center" >
        <Button
            android:id="@+id/btnCircle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/selector_btn_globe" />
    </LinearLayout>
    
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:scaleType="centerInside"
        android:src="@drawable/seperator"
        />
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center" >
        <Button
            android:id="@+id/btnListView"
            android:layout_width="27dp"
            android:layout_height="20dp"
            android:background="@drawable/selector_icon_list_view"
            android:padding="5dip" />
    </LinearLayout>
    
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="gone"        
         >
        <Button
            android:id="@+id/btnMonocle"
            android:layout_width="21dp"
            android:layout_height="17dp"
            android:scaleType="centerInside"
            android:background="@drawable/icon_monocle" />
        
    </LinearLayout>
    

</LinearLayout>