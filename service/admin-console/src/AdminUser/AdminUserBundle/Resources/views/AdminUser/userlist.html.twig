{% extends "AdminUserBundle::layout.html.twig" %}

{% block title "Social Maps - User List " %}

{% block content %}
<link rel="stylesheet" href="{{ asset('bundles/whiteoctoberpagerfanta/css/pagerfantaDefault.css') }}" type="text/css"
      media="all"/>
<a href="{{ path('admin_user_logoutpage') }}">Logout</a>
<table class="user_list" align="right">
    <tr>
        <td>
            <form action="{{ path('adminuser_search_result', {'page': 1}) }}" method="POST" id="search_keyword">
                {{ form_rest(form) }}

            </form>
        </td>
    </tr>
</table>
<table class="table table-striped table-bordered table-condensed">
    <thead>
    <tr>
        <th>User ID</th>

        <th>Email</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Gender</th>
        <th>RegMedia</th>
        <th>Status</th>
        <th class="actionHeader">Actions</th>
    </tr>
    </thead>

    {% if pager|length > 0 %}
    <tbody>
    {% for user in entities %}
    <tr>
        <td><a href="{{ path('admin_user_updatepage', {'id': user.id}) }}">{{ user.id }}</a></td>

        <td>{{ user.email }}</td>
        <td>{{ user.firstName }}</td>
        <td>{{ user.lastName }}</td>
        <td>{{ user.gender }}</td>
        <td>{{ user.regMedia }}</td>
        <td>{% if user.enabled %}
            Active
            {% else %}
            Blocked
            {% endif %}</td>
        <td style="width: 60px;">
            <div class="actions">
                <a title="Edit" class="btn btn-primary btn-mini edit-item"
                   href="{{ path('admin_user_updatepage', {'id': user.id}) }}"><i class="icon-edit icon-white"></i>Edit</a>
                <br/><br/>
                <a title="Edit" class="btn btn-primary btn-mini edit-item"
                   href="{{ path('emailnotify_user', {'id': user.id}) }}">Email</a>

            </div>
        </td>
    </tr>
    {% endfor %}
    </tbody>
    <tfoot>
    <tr>
        <td colspan="6">
            <div class="pagerfanta">
                {{ pagerfanta(pager, 'default') }}
            </div>
        </td>
    </tr>
    </tfoot>
    {% else %}
    <tfoot>
    <tr>
        <td colspan="6">
            <div class="pagerfanta">
                No Users Found.
            </div>
        </td>
    </tr>
    </tfoot>
    {% endif %}
</table>
{% endblock %}
