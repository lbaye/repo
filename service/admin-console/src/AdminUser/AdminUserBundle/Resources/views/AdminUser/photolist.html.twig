{% extends "AdminUserBundle::layout.html.twig" %}

{% block title "Social Maps - Photo List " %}

{% block content %}
<link rel="stylesheet" href="{{ asset('bundles/whiteoctoberpagerfanta/css/pagerfantaDefault.css') }}" type="text/css"
      media="all"/>
<a href="{{ path('admin_user_logoutpage') }}">Logout</a>
<table class="user_list" align="right">
    <tr>
        <td>
            <form action="{{ path('manage_photo_search', {'page': 1}) }}" method="POST" id="search_keyword">
                {{ form_rest(form) }}

            </form>
        </td>
    </tr>
    </table>
    <table class="table table-striped table-bordered table-condensed">
        <thead>
        <tr>
            <th>Photo ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Thumbnail</th>
            <th class="actionHeader">Actions</th>
        </tr>
        </thead>

        {% if pager|length > 0 %}

        <tbody>
        {% for photo in entities %}
        <tr>
            <td>{{ photo.id }}</td>

            <td>{{ photo.title }}</td>
            <td>{{ photo.description }}</td>
            <td><img src="../../../../web{{ photo.uriThumb }}" class="img-polaroid"></td>

            <td style="width: 90px;">
                <div class="actions">
                    <a title="Delete" class="btn btn-danger btn-mini edit-item"
                       href="{{ path('photo_delete', {'id': photo.id}) }}"><i
                            class="icon-trash icon-white"></i>Delete</a>


                </div>
            </td>
        </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr>
            <td colspan="6">
                <div class="pagerfanta">
                    {{ pagerfanta(pager, 'default') }}
                </div>
            </td>
        </tr>
        </tfoot>
        {% else %}
        <tfoot>
        <tr>
            <td colspan="6">
                <div class="pagerfanta">
                    No Photos Found.
                </div>
            </td>
        </tr>
        </tfoot>
        {% endif %}
    </table>
    {% endblock %}
